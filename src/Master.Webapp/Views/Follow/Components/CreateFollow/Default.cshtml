@model HouseWarehouseStore.Models.FollowModel

<div>
    <h4>Thêm mới Follow</h4>
    <hr />
    <form asp-controller="Follow" asp-action="Create">
        <div class="form-body">
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="FollowLink" class="control-label"></label>
                    <input asp-for="FollowLink" class="form-control" min="0" />
                    <span asp-validation-for="FollowLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" class="form-control" min="0" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn btn-success btn-sm">
                    Lưu
                </button>
            </div>
        </div>
    </form>
</div>
