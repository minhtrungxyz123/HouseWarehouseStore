@model HouseWarehouseStore.Models.FollowModel

<div>
    <h4>Sửa Follow</h4>
    <hr />
    <form asp-controller="Follow" asp-action="Edit">
        <div class="form-body">
            <input type="hidden" asp-for="FollowId" />
            <div class="modal-body">
               <div class="form-group">
                    <label asp-for="Twitter" class="control-label"></label>
                    <input asp-for="Twitter" class="form-control" min="0" />
                    <span asp-validation-for="Twitter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Facebook" class="control-label"></label>
                    <input asp-for="Facebook" class="form-control" min="0" />
                    <span asp-validation-for="Facebook" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Linkedin" class="control-label"></label>
                    <input asp-for="Linkedin" class="form-control" min="0" />
                    <span asp-validation-for="Linkedin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Instagram" class="control-label"></label>
                    <input asp-for="Instagram" class="form-control" min="0" />
                    <span asp-validation-for="Instagram" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Youtube" class="control-label"></label>
                    <input asp-for="Youtube" class="form-control" min="0" />
                    <span asp-validation-for="Youtube" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" class="form-control" min="0" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn btn-success btn-sm">
                    Lưu
                </button>
            </div>
        </div>
    </form>
</div>