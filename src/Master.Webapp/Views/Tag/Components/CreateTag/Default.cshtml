@model HouseWarehouseStore.Models.TagModel

<div>
    <h4>Thêm mới tag sản phẩm</h4>
    <hr />
    <form asp-controller="Tag" asp-action="Create">
        <div class="form-body">
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" min="0" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Soft" class="control-label"></label>
                    <input asp-for="Soft" class="form-control" min="0" />
                    <span asp-validation-for="Soft" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-group-sm">
                    Trạng thái
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.Active)
                    </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn btn-success btn-sm">
                    Lưu
                </button>
            </div>
        </div>
    </form>
</div>
