@model HouseWarehouseStore.Models.ArticleCategoryModel

@{
    ViewData["Title"] = "Chi tiết danh mục bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Loại bài viết</h1>

    <div class="card mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Chi tiết danh mục loại bài viết</h6>
        </div>
        <div class="card-header">
            <a class="btn btn-danger" asp-action="Index" asp-controller="ArticleCategory"><i class="fa-solid fa-arrow-left"></i> Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-8">
                <form asp-action="Detail">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ArticleCategoryId" />
                    <div class="form-group bg-white">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" readonly="@(true)" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group bg-white">
                        <label asp-for="Url" class="control-label"></label>
                        <input asp-for="Url" class="form-control" readonly="@(true)" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div class="form-group bg-white">
                        <label asp-for="CategorySort" class="control-label"></label>
                        <input asp-for="CategorySort" class="form-control" readonly="@(true)" />
                        <span asp-validation-for="CategorySort" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="CategoryActive" /> @Html.DisplayNameFor(model => model.CategoryActive)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ShowHome" /> @Html.DisplayNameFor(model => model.ShowHome)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ShowMenu" /> @Html.DisplayNameFor(model => model.ShowMenu)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Hot" /> @Html.DisplayNameFor(model => model.Hot)
                        </label>
                    </div>
                    <div class="form-groupbg-white">
                        <label asp-for="TitleMeta" class="control-label"></label>
                        <input asp-for="TitleMeta" class="form-control" readonly="@(true)" />
                        <span asp-validation-for="TitleMeta" class="text-danger"></span>
                    </div>
                    <div class="form-group bg-white">
                        <label asp-for="DescriptionMeta" class="control-label"></label>
                        <div id="DescriptionMeta"></div>
                        <input type="hidden" asp-for="DescriptionMeta" class="form-control" readonly="@(true)" />
                        <span asp-validation-for="DescriptionMeta" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#Body').summernote({
            placeholder: 'Mời bạn soạn thảo',
            tabsize: 2,
            height: 500,              // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });

        $('#Body').on('summernote.change', function(we, contents, $editable) {
            var markupStr = $('#Body').summernote('code');
            console.log(markupStr)
            $("input#Body").val(markupStr);
        });

        $(document).ready(function() {
            $('#Body').summernote('code', $("input#Body").val());
        })
    </script>
}


